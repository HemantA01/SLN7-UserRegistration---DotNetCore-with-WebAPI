@model List<SLN7.MODEL.ViewModel.LeadSourceViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="right-section">
    <div class="box-shadow  bg-white p-2 pb-5">
        <div class="row row-border">
            <div class="col-md-6">
                <h1 class="pl-3 pt-3 page-heading text-left"> Lead Source </h1>
            </div>
            <div class="col-md-6">
                <a href="javascript:addLeadSource('Add');" class="btn-submit">Add Lead Source </a>
            </div>
        </div>
        <table class="table mydatatable">
            <thead>
                <tr>
                    <th>Lead Source Name</th>
                    <th>Status</th>
                    <th> Action </th>
                </tr>
            </thead>
            <tbody id="tbDetails">
                @{
                    foreach (var data in Model)
                    {

                        <tr>
                            
                            <td>@data.LeadSourceText</td>
                            <td>@data.IsLeadSrcActive</td>
                            <td>
                                <a class="leadedit" onclick="javascript:addLeadSource('Update','@data.LeadSourceID','@data.LeadSourceText','@data.IsLeadSrcActive');"><i class="fa fa-edit"></i></a>
                                <a class="leadedit1" id="getval" href=""><i class="fa fa-trash" style="display: none;"></i></a>
                                @if (@data.IsLeadSrcActive == "Active")
                                {
                                    <a class="leadactive" onclick="javascript:void(0);" href="#"><i class="fa fa-check"></i></a>
                                }
                                else
                                {
                                    <a class="leadinactive" onclick="javascript:void(0);" href="#"><i class="fa fa-ban"></i></a>
                                }
                                <input type="hidden" id="hdnId" />
                                <input type="hidden" id="hdnLeadId" value="@data.LeadSourceID" />
                                <a class="deleteLeadSrc"><i class="fa fa-trash"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<partial name="_AddLeadSource" />
