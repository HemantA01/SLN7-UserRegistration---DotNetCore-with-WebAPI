@model SLN7.MODEL.ViewModel.UserLoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LogicWorld || Login</title>
    <link rel="stylesheet" href="" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;0,900;1,300&display=swap" rel="stylesheet" />
    <link href="https://www.jqueryscript.net/css/jquerysctipttop.css" rel="stylesheet" type="text/css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.0/normalize.min.css" rel="stylesheet" type="text/css">

    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="~/css/jquery.jqZoom.css" />
</head>
<body>
   
    <div class="">
        <div class="login-bg">
            <div class="login-box">
                <div class="row mx-0">
                    <div class="col-md-12 text-center position-relative">
                        <h2 class="logo zoom-box"> <img src="~/images/hug-kiss-images.jpg" class="img-fluid" alt="" id="imgZoom" /> </h2>
                        <h2 class="knowledge-text"> Welcome to Logic World </h2>
                        <div class="form-box">
                            <span style="color:red"></span>
                            <form autocomplete="off" role="form" asp-controller="UserDetails" asp-action="VerifyUser" method="post" >
                                <div class="form-group position-relative">
                                    <i class="fa fa-user" aria-hidden="true"></i>
                                    <input type="text" asp-for="UserName" id="username" class="form-control" name="username" placeholder="Username " value="administrator" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-4 position-relative">
                                    <i class="fa fa-eye-slash" id="eye" ></i>
                                    <input type="text" asp-for="Password" id="password" class="form-control" name="password" placeholder="Password " value="admin@123" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="form-group mt-4 position-relative">
                                    
                                </div>
                                <div class="form-group d-flex">
                                    <label class="ml-auto" for="exampleCheck1">Forgot Password ?</label>
                                </div>
                                <button type="submit" id="btnLogin" class="btn btn-login w-100 mt-3 position-relative has-spinner"> Log Into LogicWorld  <i class="fa fa-long-arrow-right"></i></button>
                            </form>
                            <h2 class="signup mt-4"> Don't Have An Account ? <a href="#"> SignUp Now </a>  </h2>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/jquery-3.2.1.slim.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/jquery.jqZoom.js"></script>
    @*<script src="~/js/Custom/User/login.js"></script>*@
    <script>
    $(function(){
        $("#imgZoom").jqZoom({
            selectorWidth: 30,
            selectorHeight: 30,
            viewerWidth: 600,
            viewerHeight: 600
        });

    })
</script>
</body>
