@model SLN7.MODEL.ViewModel.UserRegistrationControlsViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="right-section">
    <div class="box-shadow  bg-white p-2 pb-5">
        <div class="row row-border mt-0" id="">
            <div class="col-md-12  personal-heading-section pl-0">
                <h1 class="pl-1  page-heading text-left" style="">New User Registration </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>First Name</label>
                    <input type="text" id="txtUserFName" class="form-control" placeholder="Enter Your First Name" tabindex="1" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Last Name</label>
                    <input type="text" id="txtUserLName" class="form-control" placeholder="Enter Your Last Name" tabindex="2" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Email Address</label>
                    <input type="text" id="txtUserEmail" class="form-control" placeholder="Enter Your Email" tabindex="3" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Mobile Number</label>
                    <input type="text" id="txtUserMobile" class="form-control" placeholder="Enter Your Mobile Number" tabindex="4" maxlength="10" />
                    <input type="hidden" id="hdnGetUserId" />
                </div>
                
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Date Of Birth</label>
                    <input type="text" id="txtDOB" class="form-control user-date-inp" placeholder="Enter Your Birth Date" tabindex="5" autocomplete="off" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Age</label>
                    <input type="text" id="txtAge" class="form-control" disabled />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Gender</label><br />
                    <input type="radio" class="form-check-input" id="rdoMale" name="rdoGender" value="M" tabindex="6" checked>
                    <label class="form-check-label" for="rdoMale">Male</label>
                    <input type="radio" class="form-check-input" id="rdoFemale" name="rdoGender" value="F" tabindex="6">
                    <label class="form-check-label" for="rdoFemale">Female</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Nationality</label>
                    <input type="text" id="txtNationality" class="form-control" placeholder="Enter Your Nationality" tabindex="7" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Temporary Address</label>
                    <input type="text" id="txtTempAddress" class="form-control" placeholder="Enter Your Temporary Address" tabindex="8" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label>Permanent Address</label>
                    <input type="checkbox" class="form-check-input" id="chkSameAddress" tabindex="9" />
                    <input type="text" id="txtPAddress" class="form-control" placeholder="Enter Your Permanent Address" tabindex="10" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Select Country</label>
                    <select class="form-control" id="ddlCountry" tabindex="8">
                        <option disabled selected value="0">--Select Country--</option>
                        @{
                            if (Model.countryMasterLst != null)
                            {
                                foreach (var item in Model.countryMasterLst)
                                {
                                    <option value=@item.Id>@item.CountryName</option>
                                }
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Select State</label>
                    <select class="form-control" id="ddlState" tabindex="9">
                        <option disabled selected value="0">--Select State--</option>
                        @{
                            if (Model.stateMasterLst != null)
                            {
                                foreach (var item in Model.stateMasterLst)
                                {
                                    <option value='@item.CountryId^@item.StateId'>@item.StateName</option>
                                }
                            }
                        }
                    </select>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Enter City</label>
                    <input type="text" id="txtCity" class="form-control" placeholder="Enter City" tabindex="10" />
                </div>
            </div>
            <div class="col-md-3" style="display: block;">
                <div class="form-group">
                    <label>Upload Image</label><span style="color: red;"> (.jpg, .jpeg, .png) </span>
                    <input type="file" id="flUpload" class="form-control" tabindex="11" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3">
                <label>&nbsp;</label>
            </div>
            <div class="col-sm-3">
                <label>&nbsp;</label>
            </div>
            <div class="col-sm-3">
                <label>&nbsp;</label>
            </div>
            <div class="col-sm-3">
                <label>&nbsp;</label>
                <button id="btnRegisterUser" class="form-control btn btn-primary text-uppercase">Add New User</button>
            </div>
        </div>
    </div>
</div>
